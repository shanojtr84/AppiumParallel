		<testng.version>6.8.21</testng.version>
		<appium.java-client.version>6.0.0-BETA3</appium.java-client.version>
		<com.googlecode.json-simple.version>1.1.1</com.googlecode.json-simple.version>
	</properties>
  <repositories>
		<repository>
			<id>repo.jenkins-ci.org</id>
			<url>http://repo.jenkins-ci.org/public/</url>
		</repository>
		     <repository>
            <id>jitpack.io</id>
            <url>https://jitpack.io</url>
        </repository>
	</repositories>
 <!-- list of project specific dependencies are listed below -->
 	<dependencies>
		<dependency>
			<groupId>org.seleniumhq.selenium</groupId>
			<artifactId>selenium-java</artifactId>
			<version>${selenium.version}</version>
		</dependency>
		<dependency>
    <groupId>com.github.saikrishna321</groupId>
    <artifactId>AppiumTestDistribution</artifactId>
    <version>09c4398</version>
</dependency>
		<dependency>
        		<groupId>org.seleniumhq.selenium</groupId>
        		<artifactId>selenium-server</artifactId>
        		<version>${selenium-server.version}</version>
   		</dependency> 

		<dependency>
			<groupId>org.testng</groupId>
			<artifactId>testng</artifactId>
			<version>${testng.version}</version>
		</dependency>
    <dependency>
    <groupId>javax.mail</groupId>
    <artifactId>mail</artifactId>
    <version>1.4</version>
    </dependency>
		<dependency>
			<groupId>io.appium</groupId>
			<artifactId>java-client</artifactId>
			<version>${appium.java-client.version}</version>
		</dependency>
		<!-- If you need to parse JSON files in your project then include this below library  -->
		<dependency>
    		<groupId>com.googlecode.json-simple</groupId>
    		<artifactId>json-simple</artifactId>
    		<version>${com.googlecode.json-simple.version}</version>
		</dependency>
		<dependency>
			<groupId>org.imaginea.jenkins.plugins</groupId>
			<artifactId>testInProgress-testng-client</artifactId>
			<version>0.1</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

  <!-- The below surefire plugin is used to pass parameters to TestNG suite from command line with "mvn clean test -D<parameter=value>". For ex: mvn clean test -DpVer=9.3
       The TestNG run parameter values like priority/group can be passed without declaration below like "mvn clean test -Dgroups=regression"  -->
       
  <build>
        <plugins>
        <plugin>
    <groupId>com.coderplus.maven.plugins</groupId>
    <artifactId>copy-rename-maven-plugin</artifactId>
    <version>1.0.1</version>
    <executions>
      <execution>
        <id>rename-file</id>
        <phase>test</phase>
        <goals>
          <goal>rename</goal>
        </goals>
        <configuration>
          <sourceFile>${basedir}/target/surefire-reports/emailable-report.html</sourceFile>
          <destinationFile>${basedir}/target/surefire-reports/iOS-Automation-Report.html</destinationFile>
        </configuration>
      </execution>
    </executions>
  </plugin>
        <plugin>
<groupId>ch.fortysix</groupId>
<artifactId>maven-postman-plugin</artifactId>
<executions>
<execution>
<id>send a mail</id>
<phase>test</phase>
<goals>
<goal>send-mail</goal>
</goals>
<inherited>false</inherited>
<configuration>
<from>suncorp.automation@gmail.com</from>
<subject>Build ${BUILD_NUMBER} - iOS Automation Test Report</subject	>
<failonerror>true</failonerror>
<mailhost>smtp.gmail.com</mailhost>
<mailport>465</mailport>
<mailssl>true</mailssl>
<mailAltConfig>true</mailAltConfig>
<mailuser>suncorp.automation@gmail.com</mailuser>
<mailpassword>sunauto@123</mailpassword>
<htmlMessage><![CDATA[
 <p>Hi,</p>
 <p>Please find attached iOS automation test report for Build ${BUILD_NUMBER}.</p> 
 ]]></htmlMessage>
<receivers>
<receiver>shanojtr84@gmail.com</receiver>
</receivers>
<fileSets>
<fileSet>
<directory>${basedir}/target/surefire-reports/</directory>
<includes>
<include>iOS-Automation-Report.html</include>
</includes>
</fileSet>
</fileSets>
</configuration>
</execution>
</executions>
</plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.19.1</version>
                <configuration>
                 <testErrorIgnore>true</testErrorIgnore>   
                 <testFailureIgnore>true</testFailureIgnore>
                <!-- Suite testng xml file to consider for test execution -->
                    <suiteXmlFiles>
                        <suiteXmlFile>testng.xml</suiteXmlFile>
                    </suiteXmlFiles>
                    <systemPropertyVariables>
                     <propertyName>UDID</propertyName>
                    </systemPropertyVariables>
                    <properties>
                  	  	<property>
              				<name>listener</name>
<!--  			           <value>auto.common.TestListner</value> -->
            			</property>
            		</properties>
                </configuration>
            </plugin>
        <!-- /plugins-->
    <!--  /build-->
  
  <!-- The below builds plug-ins are required to configure the maven package compatible to submit to AWS device farm -->
  <!--  build-->
		<!--  plugins-->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.6</version>
				<executions>
					<execution>
						<goals>
							<goal>test-jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.10</version>
				<executions>
					<execution>
						<id>copy-dependencies</id>
						<phase>package</phase>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/dependency-jars/</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.5.4</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<finalName>zip-with-dependencies</finalName>
							<appendAssemblyId>false</appendAssemblyId>
							<descriptors>
								<descriptor>src/main/assembly/zip.xml</descriptor>
							</descriptors>
						</configuration>
					</execution>
				</executions>
			</plugin>

		 <plugin>
    <groupId>org.apache.maven.plugins</groupId>
    <artifactId>maven-compiler-plugin</artifactId>
    <version>3.2</version> <!-- or whatever current version -->
    <configuration>
      <source>1.8</source>
      <target>1.8</target>
    </configuration>
  </plugin>
  	</plugins>
	</build >
  
</project>
